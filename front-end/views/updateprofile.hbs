<div class="content">
  <div class="profile">
    <h2>Hồ sơ</h2>
    <form id="profileForm">
      <div class="form-group">
        <label for="name">Họ và tên*</label>
        <input type="text" id="name" value="Trần Lê Mỹ Linh">
      </div>
      <div class="form-group">
        <label for="birthday">Ngày tháng năm sinh*</label>
        <input type="date" id="birthday" value="2003-01-14">
      </div>
      <div class="form-group">
        <label for="gender">Giới tính*</label>
        <input type="text" id="gender" value="Nữ">
      </div>
      <p class="note">* Nhấn vào ô để chỉnh sửa thông tin cá nhân</p>
      <button type="submit">Cập nhật hồ sơ</button>
    </form>
  </div>
</div>

<div id="successMessage" class="success-message">Cập nhật thành công</div>
<div id="errorMessage" class="error-message">Họ và tên không thể để trống</div>

<script>
const profileForm = document.getElementById('profileForm');
const successMessage = document.getElementById('successMessage');
const errorMessage = document.getElementById('errorMessage');
const nameInput = document.getElementById('name');

profileForm.addEventListener('submit', (event) => {
  event.preventDefault(); // Prevent default form submission

  // Check if the name field is empty
  if (nameInput.value.trim() === '') {
    // Display error message
    errorMessage.style.display = 'block';
    // Hide error message after 2 seconds
    setTimeout(() => {
      errorMessage.style.display = 'none';
    }, 2000);
  } else {
    // Display success message
    successMessage.style.display = 'block';
    // Hide success message after 1 second
    setTimeout(() => {
      successMessage.style.display = 'none';
    }, 1000);
  }
});

// Style for the success message and error message
const messageStyles = `
  .success-message,
  .error-message {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #2271b1;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    display: none;
    z-index: 100;
  }
  .error-message {
    background-color: #e74c3c;
  }
`;
const styleElement = document.createElement('style');
styleElement.innerHTML = messageStyles;
document.head.appendChild(styleElement);
</script>