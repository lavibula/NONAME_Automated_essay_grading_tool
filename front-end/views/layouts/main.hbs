<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/communism.css">
    <link rel="stylesheet" href="/css/{{style}}">
    <style>
        .content {
            transition: margin-left 0.3s;
        }
        .no-sidebar .content {
            margin-left: 0 !important;
        }
        .with-sidebar .content {
            margin-left: 240px; /* or the width of your sidebar */
        }
        .sidebar {
            width: 230px; /* Adjust based on your actual sidebar width */
            transition: width 0.3s;
        }
        .no-sidebar .sidebar {
            display: none;
        }
    </style>
</head>
<body>
    <div class="app d-flex {{#if noSidebar}}no-sidebar{{else}}with-sidebar{{/if}}">
        {{#unless noSidebar}}
            <div class="sidebar">
                {{#if useStudentSidebar}}
                    {{> liststudent}}
                {{else}}
                    {{> sidebar}}
                {{/if}}
            </div>
        {{/unless}}

        <div class="content flex-grow-1">
            {{> header}}
            {{!-- <div class="container"> --}}
                <div class="col-md-12">
                    {{{body}}}
                </div>
            {{!-- </div> --}}
            {{> footer}}
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        // Log all CSS files loaded
        document.addEventListener("DOMContentLoaded", function() {
            var links = document.querySelectorAll("link[rel='stylesheet']");
            links.forEach(function(link) {
                console.log(link.href); // Logs the absolute URL of each CSS file
            });
        });
    </script>
</body>
</html>
