<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm thư mục " aria-label="Tìm kiếm">
                <button class="btn " type="button">Tìm kiếm</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-end">
            <button class="btn btn-tao text-center">Tạo thư mục</button>
        </div>
    </div>
    
    <div class="row">
        {{#each thu_muc_cau_hoi_s}}
        <div class="col-12">
            <div class="card mb-6 card-course-item">
                <div class="row g-2 align-items-center">
                    <div class="col-md-2 text-center">
                        <img src="{{this.avt}}" class="card-img-top rounded-0" alt="{{this.name}}" style="width: 80%; height: auto;">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                                <p>Môn học: {{this.mon_hoc}}</p>
                            </p>
                            <p class="card-text">
                                Số lượng câu hỏi: {{this.number_of_question}}
                            </p>
                          
                    </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <div class="d-flex justify-content-between align-self-end">
                            <button class="btn btn-primary ms-4">Chỉnh sửa</button>
                        </div>
                    </div>

                    <div class="col-md-1 text-end">
                        <div class="d-flex justify-content-between align-self-end">
                            <button class="btn btn-secondary me-4">Xóa</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>
