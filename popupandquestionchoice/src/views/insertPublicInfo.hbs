
<div class="popup" id="insertPublicInfo">
    <h2>Nhập thông tin phát hành</h2>
    <label for="examDate">Ngày thi:</label>
    <input type="date" id="examDate" name="examDate">
    <label for="examTime">Giờ thi:</label>
    <input type="time" id="examTime" name="examTime">
    <label for="students">Học sinh:</label>
    <input type="number" id="students" name="students">
    <button onclick="handleSubmit()">Phát hành</button>
</div>

<button onclick="openPopup()">Mở cửa sổ</button>

<script>
    function openPopup() {
        document.getElementById("insertPublicInfo").style.display = "block";
    }

    function handleSubmit() {

        // Xử lý dữ liệu ở đây, ví dụ:
        const examDate = document.getElementById("examDate").value;
        const examTime = document.getElementById("examTime").value;
        const students = document.getElementById("students").value;
        console.log("Ngày thi:", examDate);
        console.log("Giờ thi:", examTime);
        console.log("Số học sinh:", students);
        // Đóng cửa sổ sau khi xử lý
        document.getElementById("insertPublicInfo").style.display = "none";
    }
</script>
